<% if @restaurants.any? %>
	<ul>
	<% @restaurants.each do |restaurant| %>
		<li>
			<%= restaurant.name %> (<%=restaurant.cuisine %>)<br> 
			Average rating: <%= star_rating(restaurant.average_rating) %><br>
			<%= link_to "Edit #{restaurant.name} ", edit_restaurant_path(restaurant.id) %><br>
			<%= link_to "Delete #{restaurant.name} ", restaurant_path(restaurant.id) , method: :delete , 'data-confirm' => 'Are you sure you want to delete this?'  %><br>
			<%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant.id) %>
			<ul>
				<% restaurant.reviews.each do |review| %>
					<li><%= review.thoughts %> (<%= star_rating(review.rating) %>)</li>
				<% end %>
			</ul>
		</li>
	<% end %>
	</ul>
<% else %>
	No restaurants yet
	<% end %>